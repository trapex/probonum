block vars

mixin loadCSS(url)
	case ENV
		when 'development'
			//placeholder for generated css
		default
			link(rel="stylesheet", href=url)/


doctype html
html
	head
		meta(charset="UTF-8")/
		meta(name="viewport", content="width=device-width")/
		meta(http-equiv="X-UA-Compatible", content="IE=edge")/
		link(href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900&display=swap" rel="stylesheet")
		+loadCSS("/css/main.css")
		meta(property="og:type" content="website")/
		meta(property='og:title', content = 'Probonum')/
		meta(property='og:description', content = 'Probonum - краудсорсинговая платформа, объединяющая волонтеров, медиа меценатов и благотворительные фонды для решения актуальных социальных проблем')/
		title Probonum
		meta(name='description' content = 'Probonum - краудсорсинговая платформа, объединяющая волонтеров, медиа меценатов и благотворительные фонды для решения актуальных социальных проблем')/
		script(src="//ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")

		block head
	body
		.wrapper
			.website
				block content
		block footer

